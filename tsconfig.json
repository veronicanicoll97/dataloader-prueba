{
    "compilerOptions": {
        "target": "ES6",
        "module": "Node16",
        "moduleResolution": "node",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true, 
        "noImplicitAny": false,
        "lib": ["ESNext"],
        "strict": true,
        "rootDir": ".",
        "outDir": "dist",
        "sourceMap": true,
        "declaration": true /* Generates corresponding '.d.ts' file. */,
        "removeComments": true
    },
    "include": ["src/**/*", "src/**/*.grapql", "test/**/*.ts"],
    "exclude": ["node_modules", "dist"]
}
